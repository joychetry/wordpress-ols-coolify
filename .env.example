# OpenLiteSpeed + WordPress Configuration for Coolify
# Copy this file to .env and update with your values

# Coolify-specific settings
SERVICE_FQDN_WORDPRESS=wordpress.example.com
SERVICE_FQDN_PHPMYADMIN=phpmyadmin.example.com

# WordPress Version
WORDPRESS_VERSION=6.4

# OpenLiteSpeed Configuration
OPENLITESPEED_VERSION=1.8.2
PHP_VERSION=8.2
RELAY_VERSION=1.4.0
RELAY_PHP_VERSION=8.2

# Platform Configuration
PLATFORM=linux/amd64
RELAY_MAX_MEMORY=256mb
RELAY_EVICTION_POLICY=allkeys-lru
RELAY_ENVIRONMENT=production
RELAY_KEY=your-relay-key-here
RELAY_DATABASES=16
RELAY_MAX_ENDPOINT_DBS=8
RELAY_INITIAL_READERS=5
RELAY_MAXMEMORY_PCT=90
RELAY_LOGLEVEL=notice

# Database Configuration
WORDPRESS_DB_HOST=mysql
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=changeme123
WORDPRESS_DB_NAME=wordpress

# WordPress Site Configuration
SITE_URL=https://wordpress.example.com
SITE_TITLE=My WordPress Site
ADMIN_USER=admin
ADMIN_PASSWORD=changeme123
ADMIN_EMAIL=admin@example.com

# WordPress Features
ENABLE_MODSECURITY=true
ENABLE_RATE_LIMITING=true
ENABLE_IP_ACCESS_CONTROL=false
ALLOWED_ADMIN_IPS=
WP_ADMIN_RATE_LIMIT=10
WP_GENERAL_RATE_LIMIT=60
WP_MEMORY_LIMIT=256M
WP_MAX_MEMORY_LIMIT=512M

# PHP.ini Settings
PHP_MEMORY_LIMIT=256M
UPLOAD_MAX_FILESIZE=100M
POST_MAX_SIZE=100M
MAX_EXECUTION_TIME=300
MAX_INPUT_VARS=5000

# MySQL Configuration
MYSQL_VERSION=8.0
MYSQL_ROOT_PASSWORD=root123
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=changeme123

# PhpMyAdmin
PHPMYADMIN_VERSION=latest

# Timezone
TZ=UTC

# Coolify Volume Mount Path
# For custom PHP configuration files
COOLIFY_MOUNT_PATH=/data/coolify/applications/YOUR_APP_ID
